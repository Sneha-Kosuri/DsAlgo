class Solution {
    public int countNegatives(int[][] grid) {
        int negative=0;
        for (int row=0; row < grid.length; row++)
        {
            for (int col=0; col < grid[row].length; col++)
            {
                int value = grid[row][col];
                if(value<0)
                {
                    negative++;
                }
            }
        }
        return negative;
    }
}
